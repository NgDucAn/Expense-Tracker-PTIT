<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top Spending Categories"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp" />

    <!-- Top 1 -->
    <TextView
        android:id="@+id/tvTopCategoryLabel1"
        android:text="Category 1"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvTopCategoryTotal1"
        android:text="0 ₫"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Top 2 -->
    <TextView
        android:id="@+id/tvTopCategoryLabel2"
        android:text="Category 2"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvTopCategoryTotal2"
        android:text="0 ₫"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Top 3 -->
    <TextView
        android:id="@+id/tvTopCategoryLabel3"
        android:text="Category 3"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvTopCategoryTotal3"
        android:text="0 ₫"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout> 